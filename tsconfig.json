{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "baseUrl": "./src",
    "typeRoots": ["./types", "./node_modules/@types"],
